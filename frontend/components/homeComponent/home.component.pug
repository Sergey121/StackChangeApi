.scroll-container(infinite-scroll,
    [infiniteScrollDistance]="2",
    [infiniteScrollThrottle] = "300",
    (scrolled) = "onScroll()",
    [scrollWindow]="false"
    )
    table
        thead
            tr
                th Автор
                th Заголовок
                th Дата создания
        tbody
            tr(*ngFor="let question of questions", (click)="onDetails(question)")
                td([innerHTML]="question.owner.display_name")
                td([innerHTML]="question.title")
                td {{(question.creation_date * 1000) | date: 'dd/MM/yyyy'}}

modal("[open]"="showModal", "(close)"="showModal = false")
    .modal-title
        a([innerHTML]="details?.title", [href]="details?.link", target="_blank")
    .modal-content
        .modal-text([innerHTML]="details?.body")

